.home-container {
  background-color: #F5F7FA;
  min-height: 100vh;
}
.custom-header {
  background-color: #fff;
  padding-bottom: 10px;
  position: -webkit-sticky;
  position: sticky;
  top: 0;
  z-index: 100;
}
.custom-header .status-bar {
  height: var(--status-bar-height);
}
.custom-header .header-content {
  display: flex;
  align-items: center;
  padding: 10px 15px 0;
  height: 44px;
}
.custom-header .location-box {
  display: flex;
  align-items: center;
  margin-right: 15px;
}
.custom-header .location-box .city-text {
  font-size: 14px;
  font-weight: bold;
  color: #333;
}
.custom-header .location-box .arrow-down {
  font-size: 10px;
  color: #333;
  margin-left: 4px;
}
.custom-header .search-box {
  flex: 1;
  background-color: #F0F2F5;
  height: 32px;
  border-radius: 16px;
  display: flex;
  align-items: center;
  padding: 0 12px;
}
.custom-header .search-box .search-icon {
  font-size: 12px;
  margin-right: 6px;
}
.custom-header .search-box .placeholder {
  font-size: 13px;
  color: #aaa;
}
.custom-header .message-box {
  margin-left: 15px;
  position: relative;
}
.custom-header .message-box .msg-icon {
  font-size: 20px;
}
.custom-header .message-box .badge {
  position: absolute;
  top: 0;
  right: -2px;
  width: 8px;
  height: 8px;
  background-color: red;
  border-radius: 50%;
}
.banner-wrapper {
  background-color: #fff;
  padding: 10px 15px;
}
.main-swiper {
  height: 160px;
  border-radius: 12px;
  overflow: hidden;
  transform: translateY(0);
}
.main-swiper .banner-img {
  width: 100%;
  height: 100%;
}
.main-swiper .swiper-item-content {
  position: relative;
  width: 100%;
  height: 100%;
}
.main-swiper .banner-mask {
  position: absolute;
  bottom: 0;
  left: 0;
  width: 100%;
  height: 40%;
  background: linear-gradient(to top, rgba(0, 0, 0, 0.4), transparent);
}
.main-swiper .banner-title {
  position: absolute;
  bottom: 12px;
  left: 12px;
  color: #fff;
  font-size: 15px;
  font-weight: bold;
  text-shadow: 0 1px 2px rgba(0, 0, 0, 0.3);
}
.nav-card {
  background-color: #fff;
  margin: 0 15px 10px;
  padding: 15px 0;
  border-radius: 12px;
  display: flex;
  justify-content: space-between;
}
.nav-item {
  display: flex;
  flex-direction: column;
  align-items: center;
  flex: 1;
}
.nav-icon-wrapper {
  width: 44px;
  height: 44px;
  border-radius: 14px;
  display: flex;
  justify-content: center;
  align-items: center;
  margin-bottom: 6px;
}
.nav-icon-wrapper .nav-icon {
  font-size: 22px;
}
.nav-name {
  font-size: 12px;
  color: #333;
  font-weight: 500;
}
.notice-bar {
  margin: 0 15px 10px;
  background-color: #fff;
  border-radius: 8px;
  padding: 0 10px;
  height: 40px;
  display: flex;
  align-items: center;
}
.notice-bar .notice-tag {
  font-size: 11px;
  color: #fff;
  background-color: #FF9800;
  padding: 2px 6px;
  border-radius: 4px;
  margin-right: 10px;
}
.notice-bar .notice-swiper {
  flex: 1;
  height: 40px;
}
.notice-bar .notice-item {
  display: flex;
  align-items: center;
}
.notice-bar .notice-text {
  font-size: 12px;
  color: #666;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}
.notice-bar .arrow-right {
  color: #ccc;
  font-size: 12px;
}
.featured-grid {
  display: flex;
  margin: 0 15px 15px;
  gap: 10px;
  height: 160px;
}
.featured-item {
  border-radius: 12px;
  overflow: hidden;
  position: relative;
}
.big-card {
  flex: 1.2;
  background-size: cover;
  background-position: center;
  display: flex;
  align-items: flex-end;
}
.big-card .glass-mask {
  width: 100%;
  background: rgba(255, 255, 255, 0.9);
  -webkit-backdrop-filter: blur(4px);
          backdrop-filter: blur(4px);
  padding: 10px;
}
.big-card .ft-title {
  display: block;
  font-size: 15px;
  font-weight: bold;
  color: #333;
}
.big-card .ft-desc {
  font-size: 11px;
  color: #666;
}
.featured-col {
  flex: 0.8;
  display: flex;
  flex-direction: column;
  gap: 10px;
}
.small-card {
  flex: 1;
  padding: 10px;
  position: relative;
}
.small-card.bg-blue {
  background-color: #E1F5FE;
}
.small-card.bg-orange {
  background-color: #FFF3E0;
}
.small-card .ft-title-sm {
  font-size: 14px;
  font-weight: bold;
  color: #333;
  display: block;
}
.small-card .ft-desc-sm {
  font-size: 10px;
  color: #666;
}
.small-card .ft-icon {
  position: absolute;
  bottom: 5px;
  right: 5px;
  font-size: 24px;
  opacity: 0.8;
}
.sticky-tabs {
  position: -webkit-sticky;
  position: sticky;
  top: calc(var(--status-bar-height) + 54px);
  background-color: #F5F7FA;
  padding: 10px 15px;
  display: flex;
  align-items: center;
  gap: 20px;
  z-index: 90;
}
.sticky-tabs .tab-item {
  position: relative;
  padding-bottom: 4px;
}
.sticky-tabs .tab-item.active .tab-text {
  font-size: 18px;
  font-weight: bold;
  color: #333;
}
.sticky-tabs .tab-item.active .tab-line {
  position: absolute;
  bottom: 0;
  left: 50%;
  transform: translateX(-50%);
  width: 20px;
  height: 3px;
  background-color: #03c610;
  border-radius: 2px;
}
.sticky-tabs .tab-item .tab-text {
  font-size: 16px;
  color: #999;
  transition: all 0.2s;
}
.content-area {
  padding: 0 15px;
}
.activity-card {
  background-color: #fff;
  border-radius: 12px;
  overflow: hidden;
  margin-bottom: 15px;
  box-shadow: 0 4px 16px rgba(0, 0, 0, 0.04);
}
.activity-card .act-cover {
  height: 150px;
  position: relative;
}
.activity-card .act-cover .act-img {
  width: 100%;
  height: 100%;
}
.activity-card .act-cover .act-tag {
  position: absolute;
  top: 10px;
  left: 10px;
  padding: 4px 8px;
  border-radius: 4px;
  font-size: 11px;
  color: #fff;
  font-weight: bold;
}
.activity-card .act-cover .act-tag.st-green {
  background-color: #03c610;
}
.activity-card .act-cover .act-tag.st-gray {
  background-color: #ccc;
}
.activity-card .act-cover .act-type {
  position: absolute;
  bottom: 10px;
  left: 10px;
  background: rgba(0, 0, 0, 0.6);
  color: #fff;
  padding: 2px 6px;
  font-size: 10px;
  border-radius: 4px;
}
.activity-card .act-info {
  padding: 12px;
}
.activity-card .act-title {
  font-size: 16px;
  font-weight: bold;
  color: #333;
  margin-bottom: 8px;
  display: block;
}
.activity-card .act-meta {
  display: flex;
  gap: 12px;
  margin-bottom: 12px;
}
.activity-card .meta-item {
  font-size: 12px;
  color: #666;
}
.activity-card .act-bottom {
  display: flex;
  justify-content: space-between;
  align-items: center;
}
.activity-card .act-bottom .user-avatars {
  display: flex;
  align-items: center;
}
.activity-card .act-bottom .user-avatars .avatar {
  width: 20px;
  height: 20px;
  border-radius: 50%;
  background-color: #ddd;
  margin-right: -6px;
  border: 1px solid #fff;
}
.activity-card .act-bottom .user-avatars .enroll-text {
  font-size: 11px;
  color: #999;
  margin-left: 12px;
}
.activity-card .act-bottom .price {
  font-size: 18px;
  font-weight: bold;
  color: #FF5722;
}
.route-card {
  background-color: #fff;
  border-radius: 12px;
  padding: 10px;
  margin-bottom: 12px;
  display: flex;
  align-items: center;
  box-shadow: 0 2px 8px rgba(0, 0, 0, 0.02);
}
.route-card .route-img {
  width: 80px;
  height: 80px;
  border-radius: 8px;
  margin-right: 12px;
}
.route-card .route-info {
  flex: 1;
}
.route-card .route-title {
  font-size: 15px;
  font-weight: bold;
  color: #333;
  margin-bottom: 8px;
  display: block;
}
.route-card .route-data {
  display: flex;
  align-items: baseline;
}
.route-card .route-data .data-num {
  font-size: 14px;
  font-weight: bold;
  color: #333;
  margin-right: 2px;
}
.route-card .route-data .data-label {
  font-size: 10px;
  color: #999;
}
.route-card .route-data .divider {
  margin: 0 8px;
  color: #eee;
  font-size: 10px;
}
.route-card .route-data .level {
  color: #FF9800;
}
.post-card {
  background-color: #fff;
  padding: 15px;
  border-radius: 12px;
  margin-bottom: 12px;
}
.post-card .post-header {
  display: flex;
  align-items: center;
  margin-bottom: 10px;
}
.post-card .post-header .post-avatar {
  width: 32px;
  height: 32px;
  border-radius: 50%;
  background-color: #eee;
  margin-right: 10px;
}
.post-card .post-header .post-user .name {
  font-size: 13px;
  font-weight: bold;
  color: #333;
  display: block;
}
.post-card .post-header .post-user .time {
  font-size: 10px;
  color: #ccc;
}
.post-card .post-txt {
  font-size: 14px;
  color: #333;
  line-height: 1.6;
  margin-bottom: 10px;
  display: block;
}
.post-card .post-imgs {
  display: flex;
  gap: 6px;
}
.post-card .post-imgs .p-img {
  width: 100px;
  height: 100px;
  border-radius: 6px;
}